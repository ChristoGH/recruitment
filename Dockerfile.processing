FROM python:3.11-slim as builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --user -r requirements.txt

# Install Playwright in builder stage
RUN pip install --user playwright && \
    python -m playwright install chromium && \
    python -m playwright install-deps

# Final stage
FROM python:3.11-slim

WORKDIR /app

# Install only runtime dependencies required by Playwright
RUN apt-get update && apt-get install -y \
    libglib2.0-0 \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxcb1 \
    libxkbcommon0 \
    libx11-6 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install dependencies in final stage
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy Python packages from builder
COPY --from=builder /root/.local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /root/.cache/ms-playwright /root/.cache/ms-playwright

# Copy only necessary files
COPY url_processing_service.py .
COPY logging_config.py .
COPY libraries ./libraries
COPY prompts.py .
COPY recruitment_models.py .
COPY response_processor_functions.py .
COPY batch_processor.py .
COPY web_crawler_lib.py .
COPY utils.py .
COPY recruitment ./recruitment

# Create logs and data directories
RUN mkdir -p /app/logs /data /app/databases && \
    touch /app/databases/recruitment.db && \
    chmod 666 /app/databases/recruitment.db

# Add /app and /app/recruitment to PYTHONPATH
ENV PYTHONPATH=/app:/app/recruitment

# Expose port
EXPOSE 8001

# Run the application
CMD ["uvicorn", "url_processing_service:app", "--host", "0.0.0.0", "--port", "8001"] 